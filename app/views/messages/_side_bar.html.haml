.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "make-group" do
          = icon('far', 'edit', class: "make-group__icon")
        = link_to edit_user_path(current_user), class: "edit-account" do
          = icon('fa', 'cog', class: "edit-account__icon")
        
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-block
        = link_to '#' do
          .group-block__title
            = group.name
          .group-block__latest-message
            最新メッセージ